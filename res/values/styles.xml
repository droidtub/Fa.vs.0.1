<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base"></style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="CustomImageViewSetting">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">17dp</item>
    </style>

    <style name="CustomTitleSetting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#0a9182</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CustomRelativeLayoutSetting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/relative_layout_selector</item>
    </style>

    <style name="CustomTextViewSetting">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">17dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CustomSwitchSetting">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">17dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    
    <style name="CustomTextViewSetting_Change_Display">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">17dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#080808</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="CustomSeekbarSetting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">21dp</item>
        <item name="android:layout_marginLeft">21dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>