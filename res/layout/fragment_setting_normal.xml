<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground" >

    <ScrollView
        android:id="@+id/scroll_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linear_ad_view_fragment_setting" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_status"
                style="@style/CustomTitleSetting"
                android:text="STATUS" />

            <RelativeLayout
                android:id="@+id/rl_incoming_call"
                style="@style/CustomRelativeLayoutSetting" >

                <ImageView
                    android:id="@+id/icon_incoming_call"
                    style="@style/CustomImageViewSetting"
                    android:background="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/txt_incoming_call"
                    style="@style/CustomTextViewSetting"
                    android:layout_toRightOf="@+id/icon_incoming_call"
                    android:text="Incoming Calls" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switch_incoming_call"
                    style="@style/CustomSwitchSetting" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_incoming_sms"
                style="@style/CustomRelativeLayoutSetting" >

                <ImageView
                    android:id="@+id/icon_incoming_sms"
                    style="@style/CustomImageViewSetting"
                    android:background="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/txt_incoming_sms"
                    style="@style/CustomTextViewSetting"
                    android:layout_toRightOf="@+id/icon_incoming_sms"
                    android:text="Incoming SMS" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switch_incoming_sms"
                    style="@style/CustomSwitchSetting" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_enable_for"
                style="@style/CustomTitleSetting"
                android:text="ENABLE FOR" />

            <RelativeLayout
                android:id="@+id/rl_normal_mode"
                style="@style/CustomRelativeLayoutSetting" >

                <ImageView
                    android:id="@+id/icon_normal_mode"
                    style="@style/CustomImageViewSetting"
                    android:background="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/txt_normal_mode"
                    style="@style/CustomTextViewSetting"
                    android:layout_toRightOf="@+id/icon_normal_mode"
                    android:text="Normal Mode" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switch_normal_mode"
                    style="@style/CustomSwitchSetting" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_vibrate_mode"
                style="@style/CustomRelativeLayoutSetting" >

                <ImageView
                    android:id="@+id/icon_vibrate_mode"
                    style="@style/CustomImageViewSetting"
                    android:background="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/txt_vibrate_mode"
                    style="@style/CustomTextViewSetting"
                    android:layout_toRightOf="@+id/icon_vibrate_mode"
                    android:text="Vibrate Mode" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switch_vibrate_mode"
                    style="@style/CustomSwitchSetting" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_silent_mode"
                style="@style/CustomRelativeLayoutSetting" >

                <ImageView
                    android:id="@+id/icon_silent_mode"
                    style="@style/CustomImageViewSetting"
                    android:background="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/txt_silent_mode"
                    style="@style/CustomTextViewSetting"
                    android:layout_toRightOf="@+id/icon_silent_mode"
                    android:text="Silent Mode" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switch_silent_mode"
                    style="@style/CustomSwitchSetting" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linear_ad_view_fragment_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <!-- <com.google.android.gms.ads.AdView -->
        <!-- android:id="@+id/ad_view_fragment_setting" -->
        <!-- android:layout_width="match_parent" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_gravity="center" -->
        <!-- ads:adSize="BANNER" -->
        <!-- ads:adUnitId="@string/banner_ad_unit_id" -->
        <!-- android:visibility="gone" > -->
        <!-- </com.google.android.gms.ads.AdView> -->
    </LinearLayout>

</RelativeLayout>